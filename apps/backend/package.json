{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest unit --no-cache --config test/unit/jest-unit.config.ts",
    "test:acceptance": "jest acceptance --no-cache --config test/acceptance/jest-acceptance.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker-compose:up": "docker-compose --env-file .env up -d",
    "docker-compose:down": "docker-compose --env-file .env down",
    "launch:infrastructure:test": "npm run docker-compose:up:test && npm run create:topics:test && npm run change:wal_level:test && npm run restart:db && npm run setup:debezium:test",
    "docker-compose:up:test": "docker-compose --env-file .env.test.local up -d",
    "docker-compose:down:test": "docker-compose --env-file .env.test.local down",
    "create:topics:test": "ts-node scripts/create-kafka-topics.ts --acceptance-tests",
    "change:wal_level:test": "ts-node scripts/changeWalLevel.ts --acceptance-tests",
    "restart:db": "docker-compose restart db",
    "setup:debezium:test": "ts-node scripts/setupDebezium.ts --acceptance-tests",
    "delete:debezium:settings:test": "ts-node scripts/deleteDebeziumSettings.ts --acceptance-tests"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/typeorm": "^10.0.1",
    "axios": "^1.6.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-fixture-builder": "^0.0.3",
    "typeorm": "^0.3.17",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.18.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
